.resellSkuBox {
  display: flex;
  margin-bottom: 32rpx;
  padding: 20rpx;
  border-radius: 24rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.resellSkuBox .mainImg {
  border-radius: 12rpx;
  width: 160rpx;
  height: 160rpx;
  background-color: #f8f8f8;
}
.resellSkuBox .infoBox {
  width: 100%;
  margin-left: 20rpx;
}
.resellSkuBox .infoBox .titleBox {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.resellSkuBox .infoBox .titleBox .offerPrice {
  margin-left: 12rpx;
  padding: 0 14rpx;
  height: 40rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: normal;
  text-align: center;
  line-height: 40rpx;
  color: #4d03ff;
  border: 1px solid #4d03ff;
}
.resellSkuBox .infoBox .seriesTitle {
  margin-top: 12rpx;
  font-size: 20rpx;
  color: #bfbfbf;
}
.resellSkuBox .infoBox .btBox {
  display: flex;
  justify-content: space-between;
  padding-right: 20rpx;
  align-items: center;
  margin-top: 8rpx;
  font-size: 20rpx;
}
.resellSkuBox .infoBox .btBox .saleUser {
  display: flex;
  align-items: center;
}
.resellSkuBox .infoBox .btBox .saleUser .saleUserImg {
  border-radius: 32rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #f8f8f8;
}
.resellSkuBox .infoBox .btBox .saleUser .saleUserName {
  margin-left: 8rpx;
  color: #bfbfbf;
  font-size: 20rpx;
}
.resellSkuBox .infoBox .btBox .salePrice {
  font-size: 24rpx;
  font-weight: bold;
  color: #ea5334;
}
.resellSkuBox .infoBox .btBox .salePrice .salePriceText {
  font-size: 36rpx;
}

