.seriesDetailContainer .content .seriesHeaderBox .seriesHeader {
  display: flex;
  justify-content: space-between;
}
.seriesDetailContainer .content .seriesHeaderBox .seriesHeader .seriesInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 24rpx;
  width: 78%;
}
.seriesDetailContainer .content .seriesHeaderBox .seriesHeader .seriesInfo .seriesTitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.seriesDetailContainer .content .seriesHeaderBox .seriesHeader .seriesInfo .followNumber {
  font-size: 24rpx;
  color: #7b7b7b;
}
.seriesDetailContainer .content .seriesHeaderBox .seriesImg {
  border-radius: 12rpx;
  width: 124rpx;
  height: 124rpx;
  background-color: #f8f8f8;
}
.seriesDetailContainer .content .seriesHeaderBox .seriesHeaderBtns {
  margin-top: 32rpx;
}
.seriesDetailContainer .content .seriesHeaderBox .seriesHeaderBtns .btn {
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}
.seriesDetailContainer .content .seriesHeaderBox .seriesHeaderBtns .followBtn {
  background-color: #4966ff;
}
.seriesDetailContainer .content .seriesHeaderBox .seriesHeaderBtns .saleBtn {
  background-color: #4966ff;
}
.seriesDetailContainer .content .scrollBox {
  margin-top: 32rpx;
}
.seriesDetailContainer .content .scrollBox .scrollBottom {
  padding-top: 20rpx;
  padding-bottom: 50rpx;
  color: #999;
  text-align: center;
