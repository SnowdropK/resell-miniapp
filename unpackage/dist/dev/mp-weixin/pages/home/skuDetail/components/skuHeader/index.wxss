.skuHeaderBox .skuHeader {
  display: flex;
  justify-content: space-between;
}
.skuHeaderBox .skuHeader .skuImg {
  width: 124rpx;
  height: 124rpx;
  border-radius: 12rpx;
  background-color: #f8f8f8;
}
.skuHeaderBox .skuHeader .skuInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 24rpx;
  width: 78%;
}
.skuHeaderBox .skuHeader .skuInfo .skuTitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.skuHeaderBox .skuHeader .skuInfo .followNumber {
  font-size: 24rpx;
  color: #7b7b7b;
}
.skuHeaderBox .skuHeader .skuInfo .skuShare {
  width: 48rpx;
  height: 48rpx;
}
.skuHeaderBox .skuHeaderBtns {
  margin-top: 32rpx;
}
.skuHeaderBox .skuHeaderBtns .btn {
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}
.skuHeaderBox .skuHeaderBtns .collectBtn {
  background-color: #4966ff;
}
.skuHeaderBox .tagsBox {
  display: flex;
  margin-top: 40rpx;
  width: 100%;
  overflow-x: scroll;
}
.skuHeaderBox .tagsBox .tag {
  display: inline-block;
  margin-left: 20rpx;
  min-width: 80rpx;
  height: 52rpx;
  border-radius: 26rpx;
  padding: 0 18rpx;
  text-align: center;
  line-height: 52rpx;
  color: #c2c2c2;
  font-size: 24rpx;
  background-color: #fff;
}

