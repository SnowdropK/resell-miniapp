.platResellBox {
  margin-top: 40rpx;
}
.platResellBox .boxBg {
  margin-top: 32rpx;
  padding: 20rpx 20rpx 32rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.platResellBox .platResellInfo .skuInfoBox {
  display: flex;
  width: 100%;
}
.platResellBox .platResellInfo .skuInfoBox .skuImg {
  border-radius: 6rpx;
  width: 138rpx;
  height: 138rpx;
  background-color: #f8f8f8;
}
.platResellBox .platResellInfo .skuInfoBox .skuInfo {
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.platResellBox .platResellInfo .skuInfoBox .skuInfo .skuTitle {
  font-size: 28rpx;
  color: #333333;
}
.platResellBox .platResellInfo .skuInfoBox .skuInfo .seriesTitle {
  font-size: 24rpx;
  color: #bfbfbf;
}
.platResellBox .platResellInfo .skuInfoBox .skuInfo .tagsBox {
  display: flex;
  margin-top: 12rpx;
}
.platResellBox .platResellInfo .skuInfoBox .skuInfo .tagsBox .tag {
  margin-right: 20rpx;
  height: 30rpx;
  padding: 0 18rpx;
  font-size: 20rpx;
  color: #4d03ff;
  border: 1px solid #4d03ff;
  border-radius: 20rpx;
  line-height: 30rpx;
}
.platResellBox .platResellInfo .onSaleBox {
  margin-top: 22rpx;
}
.platResellBox .platResellInfo .onSaleBox .onSaleInfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #bfbfbf;
}
.platResellBox .platResellInfo .onSaleBox .onSaleInfo .onSaleInfoText {
  color: #ff3535;
}
.platResellBox .platResellInfo .onSaleBox .onSaleInfo .salePrice {
  font-size: 24rpx;
  color: #ea5334;
}
.platResellBox .platResellInfo .onSaleBox .onSaleInfo .salePrice .salePriceText {
  font-size: 38rpx;
  font-weight: bold;
}
.platResellBox .platResellInfo .onSaleBox .platSaleUserBox {
  margin-top: 32rpx;
  width: 100%;
}
.platResellBox .platResellInfo .onSaleBox .platSaleUserBox .saleUserBox .saleUser {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
  padding: 0 12rpx 0 8rpx;
  max-width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 40rpx;
  background-color: #f9f9f9;
}
.platResellBox .platResellInfo .onSaleBox .platSaleUserBox .saleUserBox .saleUser .saleImgBox {
  display: flex;
  align-items: center;
}
.platResellBox .platResellInfo .onSaleBox .platSaleUserBox .saleUserBox .saleUser .saleImgBox .saleImg {
  border-radius: 40rpx;
  width: 28rpx;
  height: 28rpx;
  background-color: #f8f8f8;
}
.platResellBox .platResellInfo .onSaleBox .platSaleUserBox .saleUserBox .saleUser .saleImgBox .saleImgText {
  margin-left: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
}
.platResellBox .platResellInfo .onSaleBox .platSaleUserBox .saleUserBox .saleUser .saleNum {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #acacac;
}
.platResellBox .recentRecordsBox .title {
  font-size: 28rpx;
  color: #333333;
}
.platResellBox .recentRecordsBox .recentRecords {
  margin-top: 24rpx;
}
.platResellBox .recentRecordsBox .recentRecords .records {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}
.platResellBox .recentRecordsBox .recentRecords .records .left {
  display: flex;
  align-items: center;
}
.platResellBox .recentRecordsBox .recentRecords .records .left .leftImg {
  border-radius: 40rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: #f8f8f8;
}
.platResellBox .recentRecordsBox .recentRecords .records .left .nickname {
  margin-left: 16rpx;
  width: 60rpx;
  color: #333333;
  font-size: 20rpx;
}
.platResellBox .recentRecordsBox .recentRecords .records .left .tag {
  margin-left: 12rpx;
  padding: 4rpx 6rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #a65630;
  background: linear-gradient(314deg, #ffcc94 0%, #fadfb6 100%);
}
.platResellBox .recentRecordsBox .recentRecords .records .right {
  display: flex;
  align-items: center;
  font-size: 20rpx;
}
.platResellBox .recentRecordsBox .recentRecords .records .right .price {
  margin-right: 28rpx;
  color: #333333;
}
.platResellBox .recentRecordsBox .recentRecords .records .right .time {
  width: 80rpx;
  color: #a8a8a8;
  text-align: right;
}

