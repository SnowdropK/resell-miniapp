.orderContainer .deliveryMethodBox {
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 24rpx;
  background-color: #fff;
}
.orderContainer .deliveryMethodBox .deliveryMethod {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}
.orderContainer .deliveryMethodBox .deliveryMethod .empowerBox {
  display: flex;
  align-items: center;
}
.orderContainer .deliveryMethodBox .deliveryMethod .empowerBox .empowerText {
  font-size: 24rpx;
  color: #999;
}
.orderContainer .deliveryMethodBox .addressBox {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
}
.orderContainer .skuSumFeeBox {
  margin-top: 32rpx;
  padding: 26rpx 20rpx 38rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.orderContainer .skuSumFeeBox .skuInfoBox {
  display: flex;
  padding-bottom: 32rpx;
  border-bottom: 1px dashed #bbbbbb;
}
.orderContainer .skuSumFeeBox .skuInfoBox .mainImg {
  width: 176rpx;
  height: 176rpx;
  background-color: #f3f4f6;
}
.orderContainer .skuSumFeeBox .skuInfoBox .skuInfo {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 22rpx;
  width: 450rpx;
}
.orderContainer .skuSumFeeBox .skuInfoBox .skuInfo .title {
  font-weight: bold;
  font-size: 26rpx;
  color: #222222;
}
.orderContainer .skuSumFeeBox .skuInfoBox .skuInfo .saleUserBox {
  display: flex;
  flex-wrap: wrap;
  margin-top: 22rpx;
}
.orderContainer .skuSumFeeBox .skuInfoBox .skuInfo .saleUserBox .saleUser {
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}
.orderContainer .skuSumFeeBox .skuInfoBox .skuInfo .saleUserBox .saleUser .saleUserImg {
  width: 32rpx;
  height: 32rpx;
  border-radius: 40rpx;
  background-color: #f8f8f8;
}
.orderContainer .skuSumFeeBox .skuInfoBox .skuInfo .saleUserBox .saleUser .saleUserText {
  margin-left: 8rpx;
  font-size: 20rpx;
  color: #bfbfbf;
}
.orderContainer .skuSumFeeBox .skuInfoBox .skuInfo .feeBox {
  display: flex;
  flex-direction: row-reverse;
}
.orderContainer .skuSumFeeBox .skuFee {
  margin-top: 34rpx;
  font-size: 24rpx;
  color: #222222;
}
.orderContainer .skuSumFeeBox .skuFee .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
}
.orderContainer .skuSumFeeBox .skuFee .item .right {
  color: #666666;
}
.orderContainer .skuSumFeeBox .skuFee .item .sumNum {
  font-size: 28rpx;
  font-weight: bold;
}
.orderContainer .skuSumFeeBox .skuFee .item .sumPrice {
  font-size: 38rpx;
  font-weight: bold;
  color: #ff3835;
}
.orderContainer .skuSumFeeBox .skuFee .item .sumPrice .sumPriceText {
  font-size: 36rpx;
}
.orderContainer .transactionTipBox {
  margin-top: 32rpx;
  padding: 20rpx 20rpx 30rpx;
  border-radius: 24rpx;
  background-color: #fff;
}
.orderContainer .transactionTipBox .title {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}
.orderContainer .transactionTipBox .content {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #9a9a9a;
}
.orderContainer .submitBox {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 180rpx;
  background-color: #fff;
}
.orderContainer .submitBox .submit {
  width: 70%;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 50rpx;
  background-color: #4d03ff;
}

