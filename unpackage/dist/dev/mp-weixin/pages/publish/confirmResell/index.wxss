.confirmResellBox .content {
  padding-bottom: 190rpx;
}
.confirmResellBox .content .resellGoodsBox {
  padding: 40rpx 40rpx 20rpx;
  overflow: scroll;
}
.confirmResellBox .content .resellGoodsBox .resellGoodsItem {
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #c8c7cc;
}
.confirmResellBox .content .resellGoodsBox .resellGoodsItem .mainImg {
  border-radius: 12rpx;
  width: 160rpx;
  height: 160rpx;
  background-color: #f8f8f8;
}
.confirmResellBox .content .resellGoodsBox .resellGoodsItem .goodsInfo {
  margin-left: 20rpx;
}
.confirmResellBox .operateBox {
  position: fixed;
  bottom: 0;
  z-index: 99;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  height: 180rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.confirmResellBox .operateBox .btn {
  width: 200rpx;
  height: 80rpx;
  border-radius: 14rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  background-color: #4d03ff;
}

